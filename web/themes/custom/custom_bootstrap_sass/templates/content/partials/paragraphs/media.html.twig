<section class="section--media section--par">
  <div class="container-fluid">
    <div class="row">
      {% if paragraph.entity.field_media.entity.field_media_image%}
        {% for img in paragraph.entity.field_media %}
          <div class="par-media par-media--{{ loop.length }} ">
            <img class="parallax" src="{{ img.entity.field_media_image.entity.uri.value | image_style('basic') }}" alt="">
          </div>
        {% endfor %}
      {% endif %}
      {% if paragraph.entity.field_media.entity.field_media_oembed_video%}
      <div class="par-media par-media--1">
        <iframe src="https://www.youtube.com/embed/{{ paragraph.entity.field_media.entity.field_media_oembed_video.value | slice(17)}}"></iframe>
      </div>
      {% endif %}
      {% if paragraph.entity.field_media.entity.field_media_video_file%}
        {% for vid in paragraph.entity.field_media %}
          <div class="par-media par-media--{{ loop.length }} ">
            <video controls class="video" src="../web/sites/default/files{{ vid.entity.field_media_video_file.entity.uri.value | replace({'public:/': ''}) }}" type="video/mp4"></video>
          </div>
        {% endfor %}
      {% endif %}
      {% if paragraph.entity.field_caption.value %}
        <div class="par-caption">
        <p class="caption">{{ paragraph.entity.field_caption.value | raw }}</p>
        </div>
      {% endif %}
    </div>
  </div>
</section>
